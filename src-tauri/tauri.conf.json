{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OMO Switch",
  "version": "1.0.0",
  "identifier": "com.omo.model-switcher",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "OMO Switch",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "MCowBQYDK2VwAyEAwYtU1QLKT0fFzLaTSI/dnnSxoXOlaHTEtumrkvLqhOQ=",
      "endpoints": [
        "https://github.com/ShellMonster/OMO-Switch/releases/latest/download/latest.json"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
